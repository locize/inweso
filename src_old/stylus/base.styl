/*------------------------------------------------------------------
[2. Navbar / .navbar]
*/

.brand
    //padding: 4px 20px
    background: url(../img/inweso.png) no-repeat
    background-position: -29px -30px
    background-size: auto 120px
    height: 55px
    //width: 200px
    display: block

.nav
    margin: 0

    p
        font-size: 16px
        line-height: 20px

    a
        color: #08C
        padding: 1px 5px

    a:hover, a.selected
        cursor: pointer
        text-decoration: none
        background-color: #08C
        color: #FAFAFA
        border-radius: 6px



.nav-inner
    padding: 9px 0 4px 1px

    .container
        border-bottom: 1px solid #d5d5d5

.navbar .container 
    position: relative

.navbar-inner 
    padding: 7px 0
    //background: #292929
    border-bottom: 1px solid #121212     
    border-radius: 0

.navbar-fixed-top 
    position: static

.navbar .nav a 
    font-size: 11px

.navbar .brand 
    font-weight: 600
    position: relative
    top: 2px

